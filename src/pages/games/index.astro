---
import {getCollection} from 'astro:content';

import MainPageLayout from "../../layouts/MainPageLayout.astro";
import GameCard from "../../components/game-card/GameCard.astro";

const boardGameEntries = await getCollection('board-games');
---
<style>
    @import "GamesPage.scss";
</style>

<MainPageLayout>
    <div slot="content" class="games-container">
        <div class="header-container">
            <h1>Itt találhatjátok Veszprémben kölcsönözhető játékainkat!</h1>
            <p>A teljes listáért valamint foglalásért látogassátok meg <a href="https://facebook.com/bethepawn"
                                                                          rel="noopener noreferrer" target="_blank">Facebook</a>
                oldalunkat.
            </p>
        </div>
        <div class="game-card-container">

            {boardGameEntries.map(({data}) =>
                    <GameCard title={data.title}
                              info={data.info}
                              description={data.description}
                              imageLink={data.image}/>
            )}
        </div>
    </div>
</MainPageLayout>